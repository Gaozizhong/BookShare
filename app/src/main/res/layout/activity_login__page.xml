<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.a1949science.www.bookshare.ui.Login_Page"
    android:gravity="center_horizontal"
    android:background="@mipmap/login">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout13"
        android:layout_alignLeft="@+id/linearLayout13"
        android:layout_alignStart="@+id/linearLayout13">

        <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:ems="10"
            android:maxLength="11"
            android:id="@+id/phoneNum"
            android:hint="@string/login_name"
            android:paddingLeft="16dp"
            android:selectAllOnFocus="true"
            android:inputType="phone"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_above="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:id="@+id/linearLayout13"
        android:layout_marginBottom="50dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:ems="10"
            android:id="@+id/password"
            android:hint="@string/login_password"
            android:paddingLeft="16dp"
            android:selectAllOnFocus="true"
            android:layout_weight="1"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/login"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rs_select_btn_blue"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/register"
        android:textSize="20sp"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:background="@drawable/rs_select_btn_blue"
        android:textColor="#FFFFFF"/>

    <CheckBox
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass_input"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/login"
        android:layout_alignRight="@+id/linearLayout13"
        android:layout_alignEnd="@+id/linearLayout13" />

</RelativeLayout>
